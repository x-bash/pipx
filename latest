# shellcheck    shell=sh        disable=SC3043,SC2164,SC1091     # xrc

___x_cmd_pipx(){
    ___x_cmd___pipx_origin "$@"
}

if ! command -v pipx; then
    x env try python || exit
    command -v pipx || pip install pipx || exit
    x path add_existed_folder "$HOME/.local/bin"
    x path add_existed_folder "$HOME/.local/pipx"
fi

___x_cmd___pipx_origin(){
    command pipx "$@"
}

xrc setmain ___x_cmd_pipx
